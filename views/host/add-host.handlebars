<form action="/host/add-host" method="POST">
    <div>
        <h1>Host Information</h1>
        <label for="name">Name</label>
        <input type="text" name="name" id="name">

        <label for="email">E-mail</label>
        <input type="text" name="email" id="email">

        <label for="phone">Phone</label>
        <input type="text" name="phone" id="phone">

        <label for="nationality">Nationality</label>
        <input type="text" name="nationality" id="nationality">

        <label for="documentType">Document Type</label>
        <input type="text" name="documentType" id="documentType">

        <label for="documentNumber">Document Number</label>
        <input type="text" name="documentNumber" id="documentNumber">

        <label for="address">Address</label>
        <input type="text" name="address" id="address">

        <label for="birthDate">Birth Date</label>
        <input type="date" name="birthDate" id="birthDate">

        <label for="type">Type</label>
        <select name="type" id="type">
            <option value="natural" selected>Natural Person</option>
            <option value="legal">Legal Person</option>
        </select>

    </div>
    <button type="submit">Add Host</button>
    <input type="reset" value="Reset">
</form>